{
  "name": "emloader",
  "description": "Provide a simple js loader for emscripten mame js compiled emulator",
  "version": "0.0.2",
  "main": "dist/emloader.js",
  "files": [
    "dist/",
    "src/",
    "samples/"
  ],
  "dependencies": {
    "browserfs": "^1.4.3"
  },
  "devDependencies": {
    "typescript": "^2.5.0"
  },
  "scripts": {
    "prepublish": "npm run build",
    "build": "npm run buildts && npm run buildcss",
    "buildts": "node_modules/typescript/bin/tsc -d  --target es6 --sourceMap --module amd --outFile dist/emloader.js src/main.ts",
    "buildcss": "cp src/emloader/plugins/plugins.css dist/emloader-plugins.css"
  }
}
